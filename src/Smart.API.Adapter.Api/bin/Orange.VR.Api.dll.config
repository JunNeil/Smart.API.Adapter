<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="dataConfiguration" type="Microsoft.Practices.EnterpriseLibrary.Data.Configuration.DatabaseSettings, Microsoft.Practices.EnterpriseLibrary.Data, Version=6.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" requirePermission="true"/>
  </configSections>
  <dataConfiguration defaultDatabase="CRMTask"/>
  <!--数据库连接配置-->
  <connectionStrings>
    <add name="OrangeHomeCore" connectionString="Data Source=.;Initial Catalog=OrangeHomeCore;Persist Security Info=True;User ID=Sa;Password=123456" providerName="System.Data.SqlClient"/>
    <add name="OrangeHomeLog" connectionString="Data Source=.;Initial Catalog=OrangeHomeLog;Persist Security Info=True;User ID=Sa;Password=123456" providerName="System.Data.SqlClient"/>
  </connectionStrings>
  <appSettings>
    <!--当前应用程序名称-->
    <add key="ApplicationName" value="Orange.VR.Api"/>
    <!--日志默认路径-->
    <add key="DefaultLogPath" value="C:\Orange.VRLog"/>
    <!--
      配置API访问控制(不配置默认启用)
      webapi:SignEnabled 配置是否启用请求参数签名校验。默认true。
      webapi:RightsEnabled 配置是否启用接口访问权限校验。默认false。
      webapi:FrequencyEnabled 配置是否启用接口访问频率校验。默认false。 
    -->
    <add key="webapi:SignEnabled" value="false"/>
    <add key="webapi:RightsEnabled" value="false"/>
    <add key="webapi:FrequencyEnabled" value="false"/>
    <!-- Redis缓存 -->
    <add key="cache-connectionString" value="127.0.0.1:6379,abortConnect=false,password=6379" />
    <!-- 七牛存储配置 -->
    <add key="qiniu:AK" value="hZOWUlOm00cZLqUwPeIIHa3877Bto-O5St7EHcfr"/>
    <add key="qiniu:SK" value="q6rP0eQpLtHdoeiG2Ya0qkKxzuMkRbqDpOKlrz7c"/>
    <add key="qiniu:Bucket" value="mesh"/>
    <!-- 互亿无线短信发送Url 用户名：cf_xcw 密码：1234567-->
    <add key="ihuyi.PostUrl" value="http://106.ihuyi.cn/webservice/sms.php?method=Submit"/>
    <add key="ihuyi.UserName" value="cf_xcw"/>
    <add key="ihuyi.Password" value="1234567"/>
    <add key="webpages:Version" value="3.0.0.0"/>
    <add key="webpages:Enabled" value="false"/>
    <add key="ClientValidationEnabled" value="true"/>
    <add key="UnobtrusiveJavaScriptEnabled" value="true"/>
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.5"/>
    <httpRuntime targetFramework="4.5"/>
  </system.web>
  <system.webServer>
    <handlers>
      <remove name="ExtensionlessUrlHandler-Integrated-4.0"/>
      <remove name="OPTIONSVerbHandler"/>
      <remove name="TRACEVerbHandler"/>
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0"/>
    </handlers>
  </system.webServer>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30AD4FE6B2A6AEED" culture="neutral"/>
        <bindingRedirect oldVersion="0.0.0.0-9.0.0.0" newVersion="9.0.0.0"/>
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral"/>
        <bindingRedirect oldVersion="0.0.0.0-9.0.0.0" newVersion="9.0.0.0"/>
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>