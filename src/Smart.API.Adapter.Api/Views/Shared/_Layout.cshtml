<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>NEOCRM Api</title>
	<link href="@Url.Content("~/favicon.ico")" rel="icon" type="image/x-icon">
	@Styles.Render("~/Content/css")
</head>
<body>
	<nav class="nav-top">
		<ul role="list">
			<li role="listitem">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
			<li role="listitem">@Html.ActionLink("Docs", "Index", "Help", new { area = "" }, null)</li>
		</ul>
	</nav>
	<div class="container">
		@RenderBody()
		<footer class="contentinfo">
			<div class="pull-left copyright">NEOCRM Api&copy; @DateTime.Now.ToString("yyyy")</div>
		</footer>
	</div>
	@RenderSection("scripts", required: false)
</body>
</html>
